# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Authentication (leave empty to auto-generate; tokens won't survive restart)
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Claude Agent SDK
# OAuth Token: Run `claude setup-token` to generate
# CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-...
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_PERMISSION_MODE=bypassPermissions  # default | acceptEdits | bypassPermissions

# Alternative: use Anthropic API key instead of OAuth token
# ANTHROPIC_API_KEY=sk-ant-api03-...

# AI Runner Limits
RUNNER_TIMEOUT_MS=600000          # AI runner timeout in ms (default: 10 minutes)
MAX_CONCURRENT_RUNNERS=3          # Max parallel AI runners (memory-sensitive)
MAX_TURNS_CHAT=20                 # Max agentic turns per chat message
MAX_TURNS_TASK=30                 # Max agentic turns per background task
TOOL_APPROVAL_ENABLED=false       # Enable per-tool WebSocket approval flow
TOOL_APPROVAL_TIMEOUT_MS=120000   # Timeout for user to approve/reject tool use (2 min)

# AI Context
CONTEXT_HISTORY_COUNT=5           # Max historical messages injected as context

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000        # Rate limit window in ms (default: 1 minute)
RATE_LIMIT_MAX_REQUESTS=10        # Max messages per window per device

# Security
CORS_ORIGIN=*                     # Allowed origins (* = all, or comma-separated list)

# Database
DATABASE_PATH=./data/vibe-remote.db

# Docker workspace path mapping (required when running in Docker)
# WORKSPACE_HOST_PATH=/home/ubuntu
# WORKSPACE_CONTAINER_PATH=/workspace

# Push Notifications (optional for development)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com
